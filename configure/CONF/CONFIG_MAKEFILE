# Pass necessary driver.makefile variables through makefile options
#
MAKEFILE_INPUT_OPTIONS := -C $(MODULE_SRC_PATH)
MAKEFILE_INPUT_OPTIONS += -f $(MODULE_MAKEFILE)
MAKEFILE_INPUT_OPTIONS += MODULE_BUILD_DIR="$(MODULE_BUILD_DIR)"

MODULE_MAKE_CMDS:=make $(MAKEFILE_INPUT_OPTIONS)

VARS_EXCLUDES+=MAKEFILE_INPUT_OPTIONS
